# Bai-thi-thu-hanh
#include<stdio.h>
#include<math.h>
int main(){
float a, b ,c , s, p;
printf (" gia tri 3 canh tam giac:\n");
scanf("%f%f%f", &a, &b, &c);
if( a + b >c && b + c > a && a + c > b) {
	p = (a + b +c) / 2;
	s = sqrt( p*(p - a)*(p - b)*(p - c));
	printf(" dien tich tam giac: %f", s);
}else {
	printf(" day khong phai tam giac");
}
	return 0;
}
